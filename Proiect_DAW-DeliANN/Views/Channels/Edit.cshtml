@model Proiect_DAW_DeliANN.Models.Channel

@{
    // Definim culorile
    var primaryColor = "#BE95BE";
    var secondaryColor = "#9B629B";
    var accentColor = "#813D81";
    var darkAccentColor = "#692369";
    var deepDarkColor = "#4D0C4D";
}

<!-- Injectam variabilele css in pagina -->
<style>
    :root {
        --primary-color: @primaryColor;
        --secondary-color: @secondaryColor;
        --accent-color: @accentColor;
        --dark-accent-color: @darkAccentColor;
        --deep-dark-color: @deepDarkColor;
    }
</style>

<link href="~/css/FormStylings.css" rel="stylesheet" />

<h2 class="text-center mt-5">Editare Canal</h2>

<div class="container mt-5">
    <div class="row">
        <div class="col-6 offset-3">

            <form method="post" asp-action="Edit" asp-controller="Channels" asp-route-id="@Model.ChannelId">

                <div asp-validation-summary="All" class="text-danger"></div>

                <input type="hidden" asp-for="WorkspaceId" /> @*campul ascuns prin care trimitem si WorkspaceId spre model binding*@

                <div class="form-group">
                    <label asp-for="Name" class="form-label">Nume Canal</label>
                    <br />
                    <input asp-for="Name" class="form-control custom-input" />

                    <!-- Mesaj de validare pentru nume canal -->
                    <span asp-validation-for="Name" class="text-danger"></span>

                    <br /><br />
                </div>

                <div class="form-group">
                    <label asp-for="Type" class="form-label">Tip Canal</label>
                    <br />
                    <textarea asp-for="Type" class="form-control summernote custom-textarea"></textarea>

                    <!-- Mesaj de validare pentru tip canal -->
                    <span asp-validation-for="Type" class="text-danger"></span>

                    <br /><br />
                </div>

                <br />
                <button class="btn btn-success custom-btn" type="submit">Salveaza Modificarile</button>

            </form>
        </div>
    </div>
</div>


