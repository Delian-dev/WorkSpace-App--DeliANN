@model Proiect_DAW_DeliANN.Models.ApplicationUser

@{
    // Definim culorile
    var primaryColor = "#BE95BE";
    var secondaryColor = "#9B629B";
    var accentColor = "#813D81";
    var darkAccentColor = "#692369";
    var deepDarkColor = "#4D0C4D";
}

<!-- Injectam variabilele css in pagina -->
<style>
    :root {
        --primary-color: @primaryColor;
        --secondary-color: @secondaryColor;
        --accent-color: @accentColor;
        --dark-accent-color: @darkAccentColor;
        --deep-dark-color: @deepDarkColor;
    }
</style>

<link href="~/css/FormStylings.css" rel="stylesheet" />

<form asp-controller="Users" asp-action="Edit" method="post" asp-route-id="@Model.Id">

    <i class="bi bi-person"></i>
    <label asp-for="UserName">Nume utilizator</label>
    <br />
    <input asp-for="UserName" class="form-control custom-input" />
    <br />

    <i class="bi bi-envelope"></i>
    <label asp-for="Email">Email utilizator</label>
    <br />
    <input asp-for="Email" class="form-control custom-input" />
    <br />

    <i class="bi bi-phone"></i>
    <label asp-for="PhoneNumber">Numar telefon</label>
    <br />
    <input asp-for="PhoneNumber" class="form-control custom-input" />
    <br />

    <i class="bi bi-person"></i>
    <label asp-for="FirstName">Nume</label>
    <br />
    <input asp-for="FirstName" class="form-control custom-input" />
    <br />

    <i class="bi bi-person"></i>
    <label asp-for="LastName">Prenume utilizator</label>
    <br />
    <input asp-for="LastName" class="form-control custom-input" />
    <br />

    <i class="bi bi-card-list"></i>
    <label>Selectati rolul</label>
    <br />


    <select name="newRole" class="form-control custom-select">
        <option selected>Selectati rolul</option>

        @foreach (var role in ViewBag.AllRoles)
        {
            @if (ViewBag.UserRole == role.Value)
            {
                <option selected="selected" value="@role.Value">@role.Text</option>
            }
            else
            {
                <option value="@role.Value">@role.Text</option>
            }
        }
    </select>
    <br />
    <button type="submit" class="btn btn-sm btn-success custom-btn">Edit User</button>

</form>




