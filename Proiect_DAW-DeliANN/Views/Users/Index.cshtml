@{
    // Definim culorile
    var primaryColor = "#BE95BE";
    var secondaryColor = "#9B629B";
    var accentColor = "#813D81";
    var darkAccentColor = "#692369";
    var deepDarkColor = "#4D0C4D";
}

<!-- Injectam variabilele css in pagina -->
<style>
    :root {
        --primary-color: @primaryColor;
        --secondary-color: @secondaryColor;
        --accent-color: @accentColor;
        --dark-accent-color: @darkAccentColor;
        --deep-dark-color: @deepDarkColor;
    }
</style>

<link href="~/css/IndexUsers.css" rel="stylesheet" />
<br />
<h2>All Users:</h2>
<br />
<div class="row">
    @foreach (var user in ViewBag.UsersList)
    {
        <div class="col-4 mb-4">
            <div class="card" style="height:100%; width: 100%;">

                <div class="card-body d-flex justify-content-between flex-column">
                    <div>
                        <p><i class="bi bi-person"> </i> UserName: @user.UserName</p>

                        <p><i class="bi bi-envelope"></i> Email: @user.Email</p>


                        @if (@user.FirstName != null)
                        {
                            <p><i class="bi bi-person"> </i> First Name: @user.FirstName</p>
                        }


                        @if (@user.LastName != null)
                        {
                            <p><i class="bi bi-person"> </i> Last Name: @user.LastName</p>
                        }


                        @if (@user.PhoneNumber != null)
                        {
                            <p><i class="bi bi-phone"></i> Phone Number: @user.PhoneNumber</p>
                        }

                    </div>
                    <div class="d-flex flex-row justify-content-between p-3">

                        <div>
                            <a asp-controller="Users" asp-action="Edit" asp-route-id="@user.Id" class="btn"><i class="bi bi-pen"></i> Edit</a>
                        </div>

                        <div>
                            <a asp-controller="Users" asp-action="Show" asp-route-id="@user.Id" class="btn"><i class="bi bi-eye-fill"></i> View</a>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    }

</div>

<br />
<br />


