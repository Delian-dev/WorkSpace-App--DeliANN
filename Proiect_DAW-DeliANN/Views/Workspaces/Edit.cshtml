@model Proiect_DAW_DeliANN.Models.Workspace

@{
    // Definim culorile
    var primaryColor = "#BE95BE";
    var secondaryColor = "#9B629B";
    var accentColor = "#813D81";
    var darkAccentColor = "#692369";
    var deepDarkColor = "#4D0C4D";
}

<!-- Injectam variabilele css in pagina -->
<style>
    :root {
        --primary-color: @primaryColor;
        --secondary-color: @secondaryColor;
        --accent-color: @accentColor;
        --dark-accent-color: @darkAccentColor;
        --deep-dark-color: @deepDarkColor;
    }
</style>

<link href="~/css/FormStylings.css" rel="stylesheet" />

<h2 class="text-center mt-5">Edit Workspace</h2>


<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 offset-3">

            <form method="post" asp-action="Edit" asp-controller="Workspaces" asp-route-id="@Model.WorkspaceId">
                <!--
                    Metoda 2 prin care se trimite id-ul catre Controller
                <input type="hidden" asp-for="Id" />  -->

                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Name" class="form-label">Workspace Name</label>
                    <br />
                    <input asp-for="Name" class="form-control custom-input" />

                    <span asp-validation-for="Name" class="text-danger"></span>

                    <br /><br />
                </div>

                <div class="form-group">
                    <label asp-for="Description" class="form-label">Description of Workspace</label>
                    <br />
                    <textarea asp-for="Description" class="form-control summernote  custom-textarea"></textarea>

                    <span asp-validation-for="Description" class="text-danger"></span>

                    <br /><br />
                </div>

                <div class="form-group">
                    <label for="CategoryId">Select the category</label>
                    <br />
                    <select asp-for="CategoryId" asp-items="Model.Categ" class="form-control custom-select">
                        <option value="">Selectati categoria</option>
                    </select>

                    <span asp-validation-for="CategoryId" class="text-danger"></span>

                    <br />
                </div>

                <button class="btn btn-sm btn-success custom-btn" type="submit">Edit workplace</button>

            </form>
        </div>
    </div>
</div>

